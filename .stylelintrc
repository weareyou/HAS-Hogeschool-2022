{
  "extends": [
    "@supple-kit/stylelint-config-supple",
    "stylelint-config-html"
  ],
  "overrides": [
    {
      "files": [
        "**/*.[scss,svelte]"
      ]
    }
  ],
  "rules": {
    "selector-pseudo-class-no-unknown": [
      true,
      {
        "ignorePseudoClasses": [
          "global"
        ]
      }
    ],
    "liberty/use-logical-spec": true
  },
  "plugins": [
    "stylelint-use-logical-spec"
  ]
}
